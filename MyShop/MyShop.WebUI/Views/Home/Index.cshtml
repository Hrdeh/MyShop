@model MyShop.Core.ViewModels.ProductListViewModel
	 @{
		 ViewBag.Title = "Home Page";
	 }

<div class="col-md-2">
	 <h1>Products</h1>
</div>
	 <div class="col-md-2">
			 <h4>Filter</h4>
			 <div style="list-group">
						@Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item active" : "list-group-item" })
						@foreach (var c in Model.ProductCategories)
						{
							@Html.ActionLink(c.Category, "Index", new { Category = c.Category }, new { @class = Request["Category"] == c.Category ? "list-group-item active" : "list-group-item" })
						}
				 </div>
			 
	  </div>


	 

	 @foreach (var item in Model.Products)
	 {
	 	 <div class="col-md-4" style="height:450px; padding:10px; margin:10px; border: solid thin whitesmoke;">
	 	 	 <div class="col-md-12">
	 	 	 	 <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
	 	 	 </div>
	 	 	 <div class="col-md-12">
	 	 	 	 <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
	 	 </div>
	 	 <div class="col-md-12">
	 	 	 <p>@item.Description</p>
	 </div>
	 <div class="col-md-12">
	 	 <p>$@item.Price</p>
</div>
<div class="col-md-12">
	 <a href="#" class="btn btn-default">Add to Cart</a>
</div>
</div>
}
	 <div class="col-md-12 clearfix" />